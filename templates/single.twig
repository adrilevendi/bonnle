{% extends "base.twig" %}

{% block content %}
	<div class=" container content-wrapper">
	<div class="row">
		<div class=" col-md-10 mx-auto">
			<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<img class="img-fluid" src="{{ post.thumbnail.src|resize(1200, 300) }}">
			<section class="article-content mt-4">
				<h1 class="article-h1 my-4">{{ post.title }}</h1>
				<a href="{{ post.link }}">{{ _e('edit') }}</a>
				<p class="blog-author mt-5">
					<span>By</span><a href="{{post.author.path}}"> {{ post.author.name }} </a><span>&bull;</span> {{ post.date }}
				</p>
				<div class="article-body mt-3 pb-5">
					{{post.content}}
				</div>
			</section>

			<!-- comment box -->
